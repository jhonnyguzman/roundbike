<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
     >
    
	<com.markupartist.android.widget.ActionBar
		android:id="@+id/actionBarContacto"
		style="@style/ActionBar" />
	
	<ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/actionBarContacto">
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	    	
	        <RelativeLayout 
		    	android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		     >
		     
				<ImageView 
			        android:id="@+id/ivContacto"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/ic_contact"
			        android:layout_alignParentRight="true"
			       
			    />
			    
			    <TextView
			        android:id="@+id/tvNombreContacto"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/actionBarContacto"
			        
			        android:layout_margin="5dp"
			        android:text="Titutlo"
			        android:textColor="#666666"
			        android:textSize="20dp"
			        android:textStyle="bold" />
			 
			    <TextView
			        android:id="@+id/tvDomicilioContacto"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_margin="3dp"
			        android:textColor="#333333" 
			        android:textSize="15dp"
			        android:text="San Juan 658"
			        android:layout_below="@+id/tvNombreContacto"/>
			    
			    <TextView
			        android:id="@+id/tvServicioContacto"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_margin="3dp"
			        android:textColor="#333333" 
			        android:textSize="15dp"
			        android:text="Gratis"
			        android:layout_below="@+id/tvDomicilioContacto"/>
			 	
			    <TextView
			        android:id="@+id/tvApellNombreDeContacto"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_margin="3dp"
			        android:textColor="#333333" 
			        android:textSize="15dp"
			         android:text="Apellido y Nombre:"
			        android:layout_below="@+id/tvServicioContacto"/>
			    
			    <EditText 
			        android:id="@+id/etApellNombreDeContacto"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/tvApellNombreDeContacto">
			        <requestFocus />
			    </EditText>
			    
			    <TextView
			        android:id="@+id/tvTelefonoDeContacto"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_margin="3dp"
			        android:textColor="#333333" 
			        android:textSize="15dp"
			         android:text="TelÃ©fono:"
			        android:layout_below="@+id/etApellNombreDeContacto"/>
			    
			    <EditText 
			        android:id="@+id/etTelefonoDeContacto"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/tvTelefonoDeContacto"/>
			    
			    <TextView
			        android:id="@+id/tvEmailDeContacto"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_margin="3dp"
			        android:textColor="#333333" 
			        android:textSize="15dp"
			         android:text="Email:"
			        android:layout_below="@+id/etTelefonoDeContacto"/>
			    
			    <EditText
			        android:id="@+id/etEmailDeContacto"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/tvEmailDeContacto"
			        android:inputType="textEmailAddress" />
			    
			    <TextView
			        android:id="@+id/tvAsuntoContacto"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_margin="3dp"
			        android:textColor="#333333" 
			        android:textSize="15dp"
			        android:text="Asunto:"
			        android:layout_below="@+id/etEmailDeContacto"/>
			     
			     <EditText
			         android:id="@+id/etAsunto"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:layout_below="@+id/tvAsuntoContacto"
			         android:ems="15"
			         android:gravity="top|left"
			         android:inputType="textMultiLine|textEmailSubject"
			         android:lines="3" >
		
			     </EditText>
			     
			     <LinearLayout 
			         android:id="@+id/lyFooterReservas"
			         android:layout_width="fill_parent"
			         android:layout_height="wrap_content"
			         android:layout_below="@+id/etAsunto"
			         android:orientation="vertical"
			         >
			     
			     <Button
			        android:id="@+id/btnEnviar"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Enviar"
			        android:layout_margin="10dp"
			        android:paddingLeft="30dp"
			        android:paddingRight="30dp"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:textColor="@drawable/try_again_button_text"
			        android:textStyle="bold"
			        android:background="@drawable/try_again_button_bg"
			      	android:layout_gravity="center"
			        />
			     
			     </LinearLayout>
			     
			  </RelativeLayout>
	     
	     </LinearLayout>
     
     </ScrollView>
	
</RelativeLayout>